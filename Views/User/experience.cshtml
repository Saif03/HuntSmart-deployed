  <script language="javascript" type="text/javascript">
    function AddSkill() {
      document.getElementById("skilldropdown").disabled = false;
    }
    function EditSkill() {
      document.getElementById("removeskillicon").style.visibility = "visible";
      document.getElementById("removeskillicon1").style.visibility = "visible";
      document.getElementById("removeskillicon2").style.visibility = "visible";
      document.getElementById("removeskillicon3").style.visibility = "visible";
    }
  </script>


  <script type="text/jscript">
    function logout() {
      alert("logout");
      document.getElementById("logoutform").submit();
    }
    $('#sskill').keypress(function () {
      var url = "/User/GetCompanies";
      var name = $('#sskill').val();

      $.get(url, { input: name }, function (data) {

        var field = data;
        var sk = field.split(",");
        if (sk[0] != null) {
          $("#td1").html(sk[0]);
        }
        if (sk[1] != null) {
          $("#td2").html(sk[1]);
        }
        if (sk[2] != null) {
          $("#td3").html(sk[2]);
        }
        if (sk[3] != null) {
          $("#td4").html(sk[3]);
        }
        if (sk[4] != null) {
          $("#td5").html(sk[4]);
        }

        //var vs = sk.join('<br>');
        //for (i = 0 ; i < sk.length; i++)
        //{
        //   $('#pss').html(vs);

        //}

      });
    });
  </script>

