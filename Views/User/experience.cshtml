@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewBag.Title = "Hunt Smart - Know before you go";
}

@{
  List<string> designation = new List<string>();
  List<string> company = new List<string>();
  List<string> exstart = new List<string>();
  List<string> exend = new List<string>();
  List<int> exid = new List<int>();
  List<int> ucid = new List<int>();

  designation = (List<string>)Session["designation"];
  company = (List<string>)Session["ucname"];
  exstart = (List<string>)Session["uexstart"];
  exend = (List<string>)Session["uexend"];
  exid = (List<int>)Session["exid"];
  ucid = (List<int>)Session["ucid"];

}

<div id="main-wrapper">
  <div class="compny-profile">
    <!-- SUB Banner -->
    <div class="profile-bnr user-profile-bnr">
      <div class="container">
        <div class="pull-left">
        </div>
        <!-- Top Riht Button -->
        <div class="right-top-bnr">
          <div class="sidebar">
            <h2 class="main-title">Social Profiles</h2>
            <ul class="socil">
              <li><a href="#."><i class="fa fa-facebook"></i></a></li>
              <li><a href="#."><i class="fa fa-google-plus"></i></a></li>
              <li><a href="#."><i class="fa fa-linkedin"></i></a></li>
              <li><a href="#."><i class="fa fa-twitter"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- Profile Company Content -->
    <div class="profile-company-content user-profile main-user" data-bg-color="f5f5f5">
      <div class="container">
        <div class="row">
          <!-- Nav Tabs -->
          <div class="col-md-12">
            <ul class="nav nav-tabs">
              <li class="active"><a data-toggle="tab" onclick="location.href = '/User/userProfile'">Profile</a></li>
              <li><a data-toggle="tab" onclick="location.href = '/User/experience'">Experience</a></li>
              <li><a data-toggle="tab" onclick="location.href = '/User/userDashboard'">Dashboard</a></li>
            </ul>
          </div>
          <!-- Tab Content -->
          <div class="col-md-12">
            <!--SSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSS-->
            <div class="container sidebar">
              <!--############################################################################################################################################-->
              <div class="">
                <div class="row ">
                  <div class="">
                    <div class="container col-sm-12">
                      <div class="row">
                        <!--****************************************************************************************************************************************-->
                        <div class="main-title col-md-9"><h5>Experience</h5></div>
                        <div style="margin-top:30px" class="col-sm-3">
                          <a onclick="javascript: addeducation()" style="margin-left:25% " href="#edu-detail">
                            <img src="~/images/plus.png" alt="image">
                          </a>
                          <a id="add" style="font-size:15px" name="add" onclick="javascript: addeducation()">Add Experience</a>
                        </div>
                      </div>
                      <!--#################################################################################################################################################-->
                      <br />
                      <br />
                      <div style="display:none" id="edu-detail">
                        <div style="background-color:ghostwhite">
                          <div style="margin-top:30px" class="col-md-12">
                            <!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
                            <form method="post" action="PostUserExperience" id="eduform">
                              <div style="background-color:ghostwhite" class="sidebar">
                                <div class="row">
                                  <div class="col-md-10">
                                    <h5 class="main-title">Experience Details</h5>
                                  </div>
                                </div>

                                <div>
                                  <div class="">

                                    <script>
                                      function selectskill(row) {
                                        var x = row.cells;
                                        document.getElementById("sskill").value = x[0].innerHTML;
                                      }
                                    </script>
                                    <div class="">

                                      @{if (Session["lemail"] != null)
                                        {
                                      <input style="visibility:hidden; margin-top:-20px" type="text" id="loginemail" name="loginemail" value="@Session["lemail"]" />
                                        }
                                      }
                                      <div class="form-group row">
                                        <label id="lbl" class="control-label col-sm-2" for="skill" style="font-size:15px">Search Company</label>
                                        <div class="col-sm-8">
                                          <input id="sskill" name="sskill" style="color:black" type="text" class="form-control w3-right" placeholder="Search Company">
                                        </div>
                                      </div>
                                      <div id="dss" style="margin-left:180px; width:700px; height:auto; background-color:ghostwhite; cursor:pointer">
                                        <p style="font-size:15px;color:blue" id="pss">
                                          <table style="color:blue; font-size:15px">
                                            <tr id="tr1" onclick="selectskill(this)"><td id="td1"></td></tr>
                                            <tr id="tr2" onclick="selectskill(this)"><td id="td2"></td></tr>
                                            <tr id="tr3" onclick="selectskill(this)"><td id="td3"></td></tr>
                                            <tr id="tr4" onclick="selectskill(this)"><td id="td4"></td></tr>
                                            <tr id="tr5" onclick="selectskill(this)"><td id="td5"></td></tr>
                                          </table>
                                      </div>
                                    </div>

                                    <div class="form-group row">
                                      <label id="lbl" class="control-label col-sm-2" for="degree" style="font-size:15px">Designation:</label>
                                      <div class="col-sm-8">
                                        <input id="degree" name="degree" type="text" class="form-control w3-right" placeholder="Designatiom">
                                      </div>
                                    </div>

                                    <div class="form-group row">
                                      <label id="lbl" class="control-label col-sm-2" for="edu-st-dt" style="font-size:15px">Start Date:</label>
                                      <div class="col-sm-8">
                                        <input id="edu-st-dt" name="edu-st-dt" type="date" class="form-control w3-right" placeholder="Enter School Start date attended">
                                      </div>
                                    </div>

                                    <div class="form-group row">
                                      <label id="lbl" class="control-label col-sm-2" for="edu-end-dt" style="font-size:15px">End Date:</label>
                                      <div class="col-sm-8">
                                        <input id="edu-end-dt" name="edu-end-dt" type="date" class="form-control w3-right" placeholder="Enter School End date attended">
                                      </div>
                                    </div>

                                    <br />
                                    <br />
                                    <div class="row">
                                      <div class="col-sm-2"><p></p></div>
                                      <div class="col-sm-9">
                                        <button style="background-color:dodgerblue" id="addedu" name="addedu" value="save" class="btn btn-default">Add</button>
                                        <input onclick="javascript: cancleedu()" style="background-color:dodgerblue" class="btn btn-default" type="button" value="Cancle" />
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                      <!--***************************************************************************************************************************************************************-->
                    </div>
                  </div>
                </div>
              </div>

              <!--###########################################################################################################################################################-->
              <div>
                <br />
                <br />
                <div class="">
                  <div class="row">

                    <div class="col-sm-12">

                      <div class="sidebar">

                        <!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
                        <div>
                          <div>

                            @{
                              <br /><br />
                              for (int i = 0; i < designation.Count(); i++)
                              {
                                var v = exstart.ElementAt(i) + "  " + " _ " + "  " + exend.ElementAt(i);
                                var vid = "ed" + exid.ElementAt(i);
                                var fid = "fd" + exid.ElementAt(i);

                            <div id="@(vid)" data-id="@(vid)" style="background-color:ghostwhite" class="sidebar-information sidebar select-link">

                              <br />

                              <div class="row">
                                <div class="col-md-11"> </div>
                                <div class="col-sm-1">
                                  <a id="editprofileicon" href="#"><img src="~/images/edit-pencil2.png" /></a>
                                  <a style="font-size:15px" id="editprofile" href="#pdate">Edit</a>
                                </div>
                              </div>
                              <br />

                              <p id="pdegree" style="font-size:15px;font-weight:bold">@designation.ElementAt(i)</p>
                              <p id="pinstitute" style="font-size:15px; font-style:italic; font-weight:500">@company.ElementAt(i)</p>
                              <p id="pdate" style="font-size:15px">@v</p>
                              <p style="visibility:hidden" id="pid">@exid.ElementAt(i)</p>
                            </div>

                            <div id="@(fid)" data-id="@(fid)" style="background-color:ghostwhite; display:none" class="sidebar-information sidebar select-link1">

                              <form method="post" action="PutExperience" id="fform">

                                <p style="font-weight:bold">Degsignation</p>
                                <input style="color:black" id="designation" name="designation" type="text" value="@designation.ElementAt(i)" />
                                <p style="font-weight:bold">Company</p>
                                <input style="color:black" id="finstitute" name="finstitute" type="text" value="@company.ElementAt(i)" />
                                <p style="font-weight:bold">StartDate</p>
                                <input style="color:black" id="exsdate" name="exsdate" type="date" value="@exstart.ElementAt(i)" />
                                <p style="font-weight:bold">EndDate</p>
                                <input style="color:black" id="exedate" name="exedate" type="date" value="@exend.ElementAt(i)" />
                                <input style="color:black; visibility:hidden" id="exid" name="exid" type="text" value="@exid.ElementAt(i)" />
                                <input style="color:black; visibility:hidden" id="ucid" name="ucid" type="text" value="@ucid.ElementAt(i)" />

                                <input type="submit" name="chkbtn" value="update" style="background-color:dodgerblue;color:white;font-weight:bold ; width:10%" id="cancleedu" class="btn btn-default" />
                                <input type="submit" name="chkbtn" value="delete" style="background-color:dodgerblue;color:white;font-weight:bold ; width:10%" id="cancleedu" class="btn btn-default" />
                                <input type="button" onclick="javascript: cancleeduupdate()" style="background-color:dodgerblue;color:white;font-weight:bold ; width:10%" id="cancleedu" name="cancleedu" value="cancle" class="btn btn-default" />
                              </form>
                            </div>

                              }

                            }

                            <script>
                              var id;
                              var d;

                              function addeducation() {
                                document.getElementById("edu-detail").style.display = "block";
                              }
                              function cancleedu() { document.getElementById("edu-detail").style.display = "none"; }

                              $('.select-link').click(function () {
                                id = $(this).attr('data-id');
                                d = "fd" + id.charAt(2) + id.charAt(3) + id.charAt(4) + id.charAt(5);

                                document.getElementById(id).style.display = "none";
                                document.getElementById(d).style.display = "block";

                              });
                              function cancleeduupdate() {
                                document.getElementById(id).style.display = "block";
                                document.getElementById(d).style.display = "none";

                              }
                            </script>
                          </div>
                        </div>
                      </div>

                      <!--Education end-->
                    </div>
                  </div>
                  <br />
                </div>
              </div>
            </div>
            <div />
            <!--################################################################################################-->
            <div class="col-md-12">
              <!--SSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSSS-->
              <div class="container sidebar">
                <!--############################################################################################################################################-->
                <div class="">
                  <div class="row ">
                    <div class="">
                      <div class="container col-sm-12">
                        <div class="row">
                          <!--****************************************************************************************************************************************-->
                          <div class="main-title col-md-9"><h5>Reviews</h5></div>
                          <div style="margin-top:30px" class="col-sm-3">
                            <a onclick="" style="margin-left:25% " href="#edu-detail">
                              <img src="~/images/plus.png" alt="image">
                            </a>
                            <a id="add" style="font-size:15px" name="add">Add Review</a>
                          </div>
                        </div>
                        <!--#################################################################################################################################################-->
                        <br />
                        <br />

                        <!--***************************************************************************************************************************************************************-->
                      </div>
                    </div>
                  </div>
                </div>

                <!--###########################################################################################################################################################-->
                <div>
                  <br />
                  <br />
                  <div class="">
                    <div class="row">

                      <div class="col-sm-12">

                        <div class="sidebar">

                          <!--!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!-->
                          @Html.Partial("star1");
                        </div>
                      </div>
                    </div>
                    <br />
                  </div>
                </div>
              </div>
              <div />

              <!--$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$$-->
              <!--##############################################################################################################################################-->
              <!--**********************************************************************************************************************************************-->
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>


@section additionalStyles{
  <!-- Style Sheet -->
  <link rel="stylesheet" href="~/Content/userprofile.css">
}

