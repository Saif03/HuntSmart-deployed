        </form>

   



            <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
            <script type="text/javascript" src="~/Scripts/jquery.rateyo.js"></script>
            <script>
                $(".rateYo").rateYo({
                    onSet: function (rating, rateYoInstance) {
                        $(this).next().val(rating);
                    },
                    rating: 0,
                    starWidth: "20px",
                    numStars: 5,
                    fullStar: true
                });

            </script>
</body>
</html>
