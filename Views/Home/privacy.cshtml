@{
  Layout = "~/Views/Shared/_Layout.cshtml";
  ViewBag.Title = "Privacy Settings - Hunt Smart";
}

<div id="main-wrapper">
  <div class="compny-profile">
    <!-- SUB Banner -->
    <div class="profile-bnr user-profile-bnr">
      <div class="container">
        <div class="pull-left">
          <h2>Wasim Anwar</h2>
          <h5>Senior Software Engineer</h5>
        </div>

        <!-- Top Riht Button -->
        <div class="right-top-bnr">
          <div class="sidebar">
            <h2 class="main-title">Social Profiles</h2>
            <ul class="socil">
              <li><a href="#."><i class="fa fa-facebook"></i></a></li>
              <li><a href="#."><i class="fa fa-google-plus"></i></a></li>
              <li><a href="#."><i class="fa fa-linkedin"></i></a></li>
              <li><a href="#."><i class="fa fa-twitter"></i></a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Profile Company Content -->
    <div class="profile-company-content user-profile main-user" data-bg-color="f5f5f5">
      <div class="container">
        <div class="row">

          <!-- Nav Tabs -->
          <div class="col-md-12">
            <ul class="nav nav-tabs">
              <li><a data-toggle="tab" onclick="location.href = '/Home/userProfile'">Profile</a></li>
              <li><a data-toggle="tab" onclick="location.href = '/Home/experience'">Experience</a></li>
              <li class="active"><a data-toggle="tab" onclick="location.href = '/Home/userDashboard'">Dashboard</a></li>
            </ul>
          </div>

          <!-- Tab Content -->
          <div class="col-md-12">
            <div class="tab-content">

              <!-- PROFILE -->
              <div id="profile" class="tab-pane fade in active">
                <div class="row">
                  <div class="col-md-8">

                    <!-- Settings -->
                    <div class="sidebar">
                      <h5 class="main-title">Settings</h5>
                      <div class="main-title">
                        <form id="myform" class="form-inline">
                          <div class="form-group">
                            <label>Privacy Settings</label>
                            <p style="margin-left: 40px;"><input name="email" type="checkbox" />Display email</p>
                            <p style="margin-left: 40px;"><input name="userName" type="checkbox" />Display name</p>
                            <p style="margin-left: 40px;"><input name="dob" type="checkbox" />Display date of birth</p>
                            <p style="margin-left: 40px;"><input name="contact" type="checkbox" />Display contact no</p>
                            <div class="row">
                              <button id="e" style="background-color: #0099CC;" name="e" type="submit" value="password" class="btn btn-default">Save Changes</button>
                              <a href="/Home/userDashboard"> <button id="cancel" style="background-color: #0099CC" name="cancel" type="button" value="cancel" class="btn btn-default">Cancel</button></a>
                            </div>
                          </div>
                        </form>
                      </div>
                      <div class="main-title">
                        <div class="row">
                          <div class="col-sm-9">
                            <label>Password</label>
                          </div>
                          <div class="col-sm-3" style="margin-top:2%"><a id="password" name="password" href="/Home/password">Edit</a></div>
                        </div>
                      </div>
                      <div class="main-title">
                        <div class="row">
                          <div class="col-sm-9">
                            <label>Email</label>
                          </div>
                          <div class="col-sm-3" style="margin-top:2%"><a id="email" name="email" href="/Home/email">Edit</a></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


@section additionalScripts{
  <!-- Scripts -->
  <script src="https://maps.googleapis.com/maps/api/js"></script>
  <script src="~/Scripts/jquery-2.1.3.min.js"></script>
  <script src="~/Scripts/bootstrap.js"></script>
  <script src="~/Scripts/plugins/superfish.min.js"></script>
  <script src="~/Scripts/jquery.ui.min.js"></script>
  <script src="~/Scripts/plugins/rangeslider.min.js"></script>
  <script src="~/Scripts/plugins/jquery.flexslider-min.js"></script>
  <script src="~/Scripts/uou-accordions.js"></script>
  <script src="~/Scripts/uou-tabs.js"></script>
  <script src="~/Scripts/plugins/select2.min.js"></script>
  <script src="~/Scripts/owl.carousel.min.js"></script>
  <script src="~/Scripts/gmap3.min.js"></script>
  <script src="~/Scripts/scripts.js"></script>
}