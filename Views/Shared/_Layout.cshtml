    <div class="uou-block-1a blog">
      <div class="container" style="padding-top: 5px">
        <!--LOGO-->
        <div class="logo" style="float:left">
          <div class="navbar-header">
            <a class="navbar-brand navbar-a-color" id="main-logo" href="/Home/Index" style="font-size: 38px;padding-left:0px;color:#ffffff;">Hunt Smart</a>
          </div>
        </div>
        <!--SEARCH-->
        <form class="navbar-form navbar-left" id="search-field" role="search" action="/Home/companylist" method="post" style="height:33px;width:561px;padding-left:30px;">
          <div class="input-group stylish-input-group" style="height:33px;outline:aliceblue;">
            <input type="text" class="form-control" name="query" style="height:33px;width:450px;color:#545454;" placeholder="Search">
            <span class="input-group-addon">
              <button type="submit" title="Advanced Search">
                <span class="glyphicon glyphicon-cog"></span>
              </button>
              <button type="submit" title="Search" id="search-button">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div>
        </form>
        <!--SIGN-IN-->
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-a-color" data-toggle="dropdown" style="font-size: 30px; font-family: raleway;color:#ffffff;background-color: rgba(0,0,0,0);">Sign in<span class="caret"></span></a>
            <ul id="login-dp" class="dropdown-menu">
              <li>
                <div class="row" style="margin: 0px">
                  <div class="col-md-12">
                    <!--LOG IN FORM-->
