                          <input type="password" style="color: black;" class="form-control" id="exampleInputPassword2" placeholder="Password" required>
                          <div class="row">
                            <div class="checkbox col-md-6">
                              <label><input type="checkbox"><span style="padding-left: 10px;font-weight: 400">Remember me</span></label>
                            </div>
                            <div id="myBtn" class="col-md-6 text-right" style="font-size:12px;margin-top:10px;margin-bottom:10px"><a href="#">Forgot password ?</a></div>
                          </div>
                        </div>
                        <div class="form-group">
                          <button type="button" id="loginButton" class="btn btn-primary btn-block">Sign in</button>
                        </div>
                      </form>
                      <div style="text-align:center">OR</div>
                      <div class="social-buttons" style="padding-bottom:10px">
                        <a href="#" class="btn btn-fb"><i class="fa fa-facebook" style="padding-right: 5px;"></i> Sign in with Facebook</a>
                      </div>*@

                    <!-----------------/////////////////////////////////////------------------->
                    <h2>Login here</h2>

                    <form class="form" action="/Account/login" method="post" id="login">

                      <div class="form-group" style="padding-top:8px">
                        <input type="email" class="form-control" id="loginemail" name="loginemail" placeholder="Email" required>
                      </div>

                      <div class="form-group" style="padding-top:8px">
                        <input type="password" style="color: black;" class="form-control" id="loginpass" name="loginpass" placeholder="Password" required>
                      </div>

                      <div class="form-group">
                        <button type="submit" id="loginButton" class="btn btn-primary btn-block">Sign in</button>
                      </div>
                    </form>
                    <!-----------------/////////////////////////////////////------------------->
                  </div>
                  <div class="bottom text-center">
                    New on Hunt Smart ? <a href="/Account/register"><b>Create Account</b></a>
                  </div>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <!-- The Modal -->
  <div id="myModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
      <span class="close">&times;</span>
      <div id="dialog" title="Email Recovery Dialog" class="dialog_class">
        <form action="" method="post">
          <label id="dialogLabel">Enter your Email For Recovering your Account:</label>
          <input id="email" name="email" type="text" style="color:black">
          <input id="submit" type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
  <!--END OF MODAL-->

  @RenderBody()
  <!-- FOOTER -->
  <div class="uou-block-4a secondary dark" style="background-color:rgba(127,127,127,0.1);margin-top: 100px">
