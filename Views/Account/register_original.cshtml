<body>
  <div class="toolbar navbar navbar-inverse navbar-fixed-top opaque-navbar opaque">
    <div class="uou-block-1a blog">
      <div class="container" style="padding-top: 5px">
        <div class="logo" style="float:left">
          <div class="navbar-header">
            <a class="navbar-brand navbar-a-color" href="#" style="font-size: 38px;padding-left:0px;color:#ffffff;">Hunt Smart</a>
          </div>
        </div>
        <form class="navbar-form navbar-left" id="search-field" role="search" action="/Home/companylist" style="height:33px;width:561px;padding-left:30px;">
          <div class="input-group stylish-input-group" style="height:33px;outline:aliceblue;">
            <input type="text" class="form-control" style="height:33px;width:450px;color:#545454;" placeholder="Search">
            <span class="input-group-addon">
              <button title="Advanced Search">
                <span class="glyphicon glyphicon-cog"></span>
              </button>
              <button type="submit" title="Search">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div>
        </form>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-a-color" data-toggle="dropdown" style="font-size: 30px; font-family: raleway;color:#ffffff;background-color: rgba(0,0,0,0);">Sign in<span class="caret"></span></a>
            <ul id="login-dp" class="dropdown-menu">
              <li>
                <div class="row" style="margin: 0px">
                  <div class="col-md-12">
                    <form class="form" id="login-nav">

                      <p id="errorMessage"></p>
                      <div class="form-group" style="padding-top:8px">
                        <label class="sr-only" for="exampleInputEmail2">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Email" required>
                      </div>
                      <div class="form-group" style="padding-top:8px">
                        <label class="sr-only" for="exampleInputPassword2">Password</label>
                        <input type="password" style="color: black;" class="form-control" id="exampleInputPassword2" placeholder="Password" required>
                        <div class="row">
                          <div class="checkbox col-md-6">
                            <label><input type="checkbox"><span style="padding-left: 10px;font-weight: 400">Remember me</span></label>
                          </div>
                          <div id="myBtn" class="col-md-6 text-right" style="font-size:12px;margin-top:10px;margin-bottom:10px"><a href="#">Forgot password ?</a></div>
                        </div>
                      </div>
                      <div class="form-group">
                        <button type="button" id="loginButton" class="btn btn-primary btn-block">Sign in</button>
                      </div>
                    </form>
                    <div style="text-align:center">OR</div>
                    <div class="social-buttons" style="padding-bottom:10px">
                      <a href="#" class="btn btn-fb"><i class="fa fa-facebook" style="padding-right: 5px;"></i> Sign in with Facebook</a>
                    </div>
                  </div>
                  <div class="bottom text-center">
                    New on Hunt Smart ? <a href="/Account/register"><b>Create Account</b></a>
                  </div>
                </div>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div id="main-wrapper">

    <!-- HOME PRO-->
    <div class="home-pro">

      <!-- PRO BANNER HEAD -->
      <div class="banr-head">
        <div class="container">
          <div class="row">
            <!-- CONTENT -->
            <div class="col-sm-7">
              <div class="text-area">
                <div class="position-center-center col-md-10">
                  <h1> Here comes the social networking platform that you’ve been waiting for</h1>
                  <h6>A social platform for finding jobs which suits your need. </h6>
                </div>
              </div>
            </div>

            <!-- FORM SECTION -->
            <div class="col-sm-5">
              <div class="login-sec">

                <!-- TABS -->
                <div class="uou-tabs">
                  <ul class="tabs">
                    <li class="active">
                      <h3>
                        <a href="#register">Register Now</a>
                      </h3>
                    </li>
                    <!--<li class="active"><a href="#log-in">Member Login</a></li>-->
                  </ul>
                  /////////////////////////////////////////////////////////////////
                  <!-- REGISTER -->
                  //////////////////////////////////////////////////////////////////

                  <div class="content">
                    <div id="register" class="active">
                      @using (Html.BeginForm("register", "Account", FormMethod.Post, new { @id = "form1" }))
                                         {

                        @Html.ValidationSummary(true)
                        @Html.TextBoxFor(model => model.User_FirstName, null, new { @class = "form-control", placeholder = "First Name", id = "firstname", name = "firstname", required = "required" })
                        <div style="color:red"> @Html.ValidationMessageFor(model => model.User_FirstName)</div>

                        @Html.TextBoxFor(model => model.User_LastName, null, new { @class = "form-control", placeholder = "Last Name", id = "lastname", name = "lastname", required = "required" })
                        <div style="color:red">
                          @Html.ValidationMessageFor(model => model.User_LastName)
                        </div>

                        @Html.TextBoxFor(model => model.User_Email, null, new { @class = "form-control", type = "email", placeholder = "Email", required = "required" })
                        <div style="color:red">
                          @Html.ValidationMessageFor(model => model.User_Email)
                        </div>
                        <p id="result"></p>

                        @Html.PasswordFor(model => model.User_Password, new { @class = "form-control", id = "pass", name = "pass", placeholder = "Password", required = "required" })
                        <div style="color:red">
                          @Html.ValidationMessageFor(model => model.User_Password)
                        </div>
                        <div class="row">
                          <div class="col-sm-1">
                          </div>
                          <div>
                            <div style="margin-top:2%" class="col-sm-2"><p style="color:darkgray">Male</p></div>
                            <div class="col-sm-2">@Html.RadioButtonFor(model => model.User_Gender, "male", new { @name = "gender" }) </div>
                          </div>
                          <div>
                            <div style="margin-top:2%" class="col-sm-2"><p style="color:darkgrey">Female</p></div>
                            <div class="col-sm-2">@Html.RadioButtonFor(model => model.User_Gender, "female", new { @name = "gender" })</div>
                          </div>
                        </div>
                        <div style="color:red">
                          @Html.ValidationMessageFor(model => model.User_Gender)
                        </div>

                        @Html.TextBoxFor(model => model.User_DOB, new { @class = "form-control", style = "color:white ", placeholder = "Date Of Birth", type = "date", id = "dob", name = "dob", required = "required" })
                        <div style="color:red">
                          @Html.ValidationMessageFor(model => model.User_DOB)
                        </div>

                        <button id="submit" type="submit" name="submit"> Register </button>
                                                }
                    </div>
                  </div>
                  /////////////////////////////////////////////////////////////////////////

                  /////////////////////////////////////////////////////////////////////////
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- FOOTER -->
  <div class="uou-block-4a secondary dark" style="background-color:rgba(127,127,127,0.1);">
    <div class="container">
      <ul class="links">
        <li><a href="#">Contact Us</a></li>
      </ul>
      <p>Copyright &copy; 2016 <a href="#">TeamCodeJitters</a>. All Rights reserved.</p>
    </div>
  </div>

